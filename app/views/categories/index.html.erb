<!-- render partial form -->
<% if current_user %>
  <div class="container-application-mt">
    <%= render 'form', category: @category %>

    <div class="cards-container">
      <div class="cards-grid">
        <% @categories.each do |category| %>
          <div class="card-category">
            <%= link_to category_path(category),
              method: :delete do %>
              <i class="fas fa-trash-alt delete-category-trash"></i>
            <% end %>
            <%= link_to category.name.capitalize, category_path(category), class: 'stretched-link' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
