<!-- Category name and Theme name -->
<h1><%= @question.theme.category.name.capitalize %>/<%= @question.theme.name.capitalize %></h1>
<!-- Question -->
<p><%= @question.subject.capitalize %></p>
<!-- add new tab -->
<%= simple_form_for([@question, @tab]) do |f| %>
  <%= f.input :name, placeholder: 'Tab name', label: false, class: 'ml-3' %>
  <%= f.submit "New Tab", class: "btn btn-outline-primary" %>
<% end %>
<!-- tabs -->
<!-- nav-pills for buttons -->
<ul class="nav nav-tabs">
  <% unless @question.tabs == [] %>
    <% @question.tabs.each do |tab| %>
      <% if @question.tabs.first == tab %>
        <li class="nav-item">
          <a class="nav-link tab-language active" data-toggle="tab" href="#<%= tab.name %>" data-name='<%= tab.name %>' data-id='<%= tab.id %>'><%= tab.name %></a>
        </li>
      <% else %>
        <li class="nav-item">
          <a class="nav-link tab-language" data-toggle="tab" href="#<%= tab.name %>" data-name='<%= tab.name %>' data-id='<%= tab.id %>'><%= tab.name %></a>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
<!-- content -->
<div class="tab-content">
  <% if @question.tabs != [] %>
    <% @question.tabs.each do |tab|  %>
      <% if @question.tabs.first == tab %>
        <div class="for-tabs card-tab tab-pane fade show active" id='<%= tab.name %>'>
      <% else %>
        <div class="for-tabs card-tab tab-pane fade" id='<%= tab.name %>'>
      <% end %>
      <% all_solution = @all_solution.select do |solution| %>
        <% solution.tab == tab %>
      <% end %>
      <% all_solution.each do |solution| %>
        <% if solution.respond_to?('comment') %>
          <div class="card-comment"><%= solution.comment %></div>
        <% elsif solution.respond_to?('solution') %>
          <div class='card-solution background-black'><%= solution.solution %></div>
        <% else %>
          <div class='card-solution background-grey'><%= solution.output %></div>
        <% end %>
      <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="for-tabs card-tab">
      <% @all_solution.each do |solution| %>
        <% if solution.respond_to?('comment') %>
          <div class="card-comment"><%= solution.comment %></div>
        <% elsif solution.respond_to?('solution') %>
          <div class="card-solution background-black"><%= solution.solution %></div>
        <% else %>
          <div class='card-solution background-grey'><%= solution.output %></div>
        <% end %>
      <% end %>
    </div>
  <% end %>
  </div>
    <!-- add comment solution or output -->
    <!-- add comment -->
    <%= simple_form_for([@question, @comment]) do |f| %>
    <% if @question.tabs != [] %>
      <div class="form-tab-id">
        <%= f.input :tab, :as => :hidden, input_html: {value: @first_tab_id} %>
      </div>
    <% end %>
      <%= f.input :comment, placeholder: 'Write a comment', label: false, :input_html => {:rows => 10}, class: 'ml-3' %>
      <%= f.submit "New Comment", class: "btn btn-outline-primary" %>
    <% end %>
    <!-- add solution -->
    <%= simple_form_for([@question, @solution]) do |f| %>
      <% if @question.tabs != [] %>
        <div class="form-tab-id">
          <%= f.input :tab, :as => :hidden, input_html: {value: @first_tab_id} %>
        </div>
      <% end %>
      <%= f.input :solution, placeholder: 'Write a solution', label: false, class: 'ml-3' %>
      <%= f.submit "New Solution", class: "btn btn-outline-primary" %>
    <% end %>
    <!-- add output -->
    <%= simple_form_for([@question, @output]) do |f| %>
      <% if @question.tabs != [] %>
        <div class="form-tab-id">
          <%= f.input :tab, :as => :hidden, input_html: {value: @first_tab_id} %>
        </div>
      <% end %>
      <%= f.input :output, placeholder: 'Output', label: false, class: 'ml-3' %>
      <%= f.submit "New Output", class: "btn btn-outline-primary" %>
    <% end %>
